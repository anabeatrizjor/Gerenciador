<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuScreen">

    <ScrollView
        android:id="@+id/scrollGeral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/layoutGeral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutLixeira"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/border_menu"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:src="@drawable/trash_ic"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

                <LinearLayout
                    android:id="@+id/layoutTextsLixeira"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lixeira"
                        android:theme="@style/textAppearence"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:theme="@style/textAppearence"
                        android:textSize="20dp"
                        android:layout_marginTop="-5dp"
                        android:textColor="@color/grey"
                        android:fontFamily="@font/poppins_light"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutExtraBox"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/border_menu"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/layoutLixeira"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/feedback_ic"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:theme="@style/textAppearence"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="17dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/settings_ic"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"/>

                    <LinearLayout
                        android:id="@+id/layoutInternoExtraBoxSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configurações"
                            android:theme="@style/textAppearence"
                            android:textSize="20dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Segurança/Preferências pessoais"
                            android:theme="@style/textAppearence"
                            android:textSize="15dp"
                            android:textColor="@color/grey"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="-5dp"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/logout_ic"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:theme="@style/textAppearence"
                        android:textSize="20dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/menuMenu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuHomeMenu"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/note_ic"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>

        <ImageView
            android:id="@+id/menuCalendarMenu"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/calendar_ic"
            android:layout_marginTop="20dp"
            android:layout_marginStart="90dp"/>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:background="@color/blueSuperClean">

            <ImageView
                android:id="@+id/menuMenuMenu"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/menu_ic"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>