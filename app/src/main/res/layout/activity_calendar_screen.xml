<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layoutTopMonths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/previousArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/previous_arrow" />

                <TextView
                    android:id="@+id/monthTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="MÃªs atual"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/forwardArrow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/forward_arrow" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layoutTopMonths">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DOM"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SEG"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TER"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QUAR"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QUIN"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SEX"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SAB"
                    android:fontFamily="@font/poppins_light"
                    android:textAlignment="center"
                    android:textColor="@color/grey"
                    android:textSize="16dp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendarRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_below="@+id/layoutDays"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="600dp"
                android:padding="16dp"/>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/menuCalendar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuHomeCalendar"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/note_ic"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>

       <LinearLayout
           android:layout_width="120dp"
           android:layout_height="match_parent"
           android:layout_marginStart="60dp"
           android:background="@color/blueSuperClean">

           <ImageView
               android:id="@+id/menuCalendarCalendar"
               android:layout_width="60dp"
               android:layout_height="40dp"
               android:src="@drawable/calendar_ic"
               android:layout_marginTop="20dp"
               android:layout_marginStart="30dp"/>

       </LinearLayout>

        <ImageView
            android:id="@+id/menuMenuCalendar"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/menu_ic"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"/>

    </LinearLayout>

</RelativeLayout>